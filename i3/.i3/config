bindsym $mod+Shift+Return exec gnome-terminal -x 'mc'

bindsym --release $mod+Print exec --no-startup-id ~/config/i3/.i3/print_screen.sh
bindsym --release $mod+Shift+Print exec --no-startup-id ~/config/i3/.i3/print_screen.sh -window root

