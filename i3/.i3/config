# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command runhaskell ~/config/i3/.i3/mystatus.hs
#	status_command i3status
	tray_padding 0
}

# XMMS2 control
bindsym $mod+Shift+Ctrl+Left exec --no-startup-id xmms2 prev && sleep 1 && killall -USR1 i3status
bindsym $mod+Shift+Ctrl+Right exec --no-startup-id xmms2 next && sleep 1 && killall -USR1 i3status
bindsym $mod+Shift+Ctrl+Home exec --no-startup-id xmms2 play && sleep 1 && killall -USR1 i3status
bindsym $mod+Shift+Ctrl+End exec --no-startup-id xmms2 stop && sleep 1 && killall -USR1 i3status
bindsym $mod+Shift+Ctrl+Break exec --no-startup-id xmms2 toggle && sleep 1 && killall -USR1 i3status
bindsym $mod+Shift+Ctrl+Up exec --no-startup-id amixer set Master 1%+ && killall -USR1 i3status
bindsym $mod+Shift+Ctrl+Down exec --no-startup-id amixer set Master 1%- && killall -USR1 i3status

mode "resize" {
	bindsym Left exec --no-startup-id [ `i3-msg resize grow left | grep true | wc -l` = 1 ] || i3-msg resize shrink right
	bindsym Down exec --no-startup-id [ `i3-msg resize grow down | grep true | wc -l` = 1 ] || i3-msg resize shrink up
	bindsym Up exec --no-startup-id [ `i3-msg resize grow up | grep true | wc -l` = 1 ] || i3-msg resize shrink down
	bindsym Right exec --no-startup-id [ `i3-msg resize grow right | grep true | wc -l` = 1 ] || i3-msg resize shrink left

	bindsym $mod mode "default"
	bindsym Escape mode "default"
	bindsym Return mode "default"
}

bindsym $mod+r mode "resize"

